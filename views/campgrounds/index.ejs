<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px; margin-bottom: 50px;"></div>
    <% for(let campground of campgrounds){ %>

      

        <div class="card mb-3">

            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length){ %>
                        <img src="<%= campground.images[Math.floor(Math.random() * campground.images.length)].url %>"
                            alt="" class="img-fluid">
                        <% } else { %>
                            <img src="https://res.cloudinary.com/ddm9sjjq5/image/upload/v1620640666/samples/landscapes/nature-mountains.jpg"
                                alt="" class="img-fluid">
                            <% } %>
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <h5>
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.description %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">view more</a>
                    </div>
                </div>

            </div>
        </div>
        <% } %>
            <script>
                const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
            </script>
            <script src="scripts/clusterMap.js"></script>